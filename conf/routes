# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


#Authenticaton
GET     /login                            controllers.Authentication.login()
POST    /login                            controllers.Authentication.loginFormProcess()
GET     /logout                           controllers.Authentication.logout()

# Schedule list (look at the default values for pagination parameters)
GET     /computers                  controllers.ScheduleController.list(p:Int ?= 0, s ?= "name", o ?= "asc", f ?= "")

# Add Schedule
GET     /computers/new              controllers.ScheduleController.create()
POST    /computers                  controllers.ScheduleController.save()

# Edit existing Schedule
GET     /computers/:id              controllers.ScheduleController.edit(id:Long)
POST    /computers/:id              controllers.ScheduleController.update(id:Long)

# Delete a Schedule
POST    /computers/:id/delete       controllers.ScheduleController.delete(id:Long)